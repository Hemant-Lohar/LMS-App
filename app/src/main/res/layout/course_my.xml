<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/courseblock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="10dp"
    >


    <TextView
        android:id="@+id/outer"
        android:layout_width="366dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round"
        android:gravity="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/c_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Coursename"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/outer"
        app:layout_constraintEnd_toEndOf="@+id/outer"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405" />

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="3 hrs"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/outer"
        app:layout_constraintEnd_toEndOf="@+id/outer"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/outer"
        app:layout_constraintVertical_bias="0.671" />

    <Button
        android:id="@+id/btn_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/outer"
        app:layout_constraintEnd_toEndOf="@id/outer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/outer"
        app:layout_constraintTop_toTopOf="@+id/outer"
        app:layout_constraintVertical_bias="0.78" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="130dp"
        android:layout_height="89dp"
        android:background="@drawable/img_bg"
        app:layout_constraintBottom_toBottomOf="@+id/outer"
        app:layout_constraintStart_toStartOf="@+id/outer"
        app:layout_constraintTop_toTopOf="@+id/outer"
        app:srcCompat="@drawable/slideimg3" />

</androidx.constraintlayout.widget.ConstraintLayout>