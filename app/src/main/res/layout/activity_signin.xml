<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/textbox_username"
        android:layout_width="338dp"
        android:layout_height="78dp"
        android:layout_marginTop="284dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/textbox" />

    <ImageView
        android:id="@+id/textbox_password"
        android:layout_width="340dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textbox_username"
        app:layout_constraintVertical_bias="0.074"
        app:srcCompat="@drawable/textbox" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="252dp"
        android:layout_height="50dp"
        android:layout_marginBottom="116dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/login"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/textbox_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.245"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/signin_backarrow"
        android:layout_width="18dp"
        android:layout_height="21dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229"
        app:srcCompat="@drawable/backarrow1" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="338dp"
        android:layout_height="60dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textbox_password"
        app:layout_constraintVertical_bias="0.261" />

    <EditText
        android:id="@+id/etxt_username"
        android:layout_width="303dp"
        android:layout_height="48dp"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textbox_username"
        app:layout_constraintEnd_toEndOf="@+id/textbox_username"
        app:layout_constraintStart_toStartOf="@+id/textbox_username"
        app:layout_constraintTop_toTopOf="@+id/textbox_username" />

    <EditText
        android:id="@+id/etxt_password"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textbox_password"
        app:layout_constraintEnd_toEndOf="@+id/textbox_password"
        app:layout_constraintStart_toStartOf="@+id/textbox_password"
        app:layout_constraintTop_toTopOf="@+id/textbox_password" />

    <TextView
        android:id="@+id/txt_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:layout_constraintVertical_bias="0.377"
        android:fontFamily="@font/poppins_regular"/>

</androidx.constraintlayout.widget.ConstraintLayout>