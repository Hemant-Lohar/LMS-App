<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sessionblock"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/outer"
        android:layout_width="350dp"
        android:layout_height="63dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        />

    <Button
        android:id="@+id/btn_attend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attend"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/outer"
        app:layout_constraintEnd_toEndOf="@+id/outer"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="@+id/outer"
        app:layout_constraintTop_toTopOf="@+id/outer"
        app:layout_constraintVertical_bias="0.727" />

    <CheckBox
        android:id="@+id/checkdone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/outer"
        app:layout_constraintEnd_toEndOf="@+id/outer"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="@+id/outer"
        app:layout_constraintTop_toTopOf="@+id/outer"
        app:layout_constraintVertical_bias="0.488" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="354dp"
        android:layout_height="115dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/img_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/slideimg2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>